# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'MKMessage' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MKMessage

  # Almofire
    pod 'Alamofire', '~> 4.7'

  # Firebase
    pod 'Firebase/Core'
    pod 'FirebaseAuth', '6.4.1'
    pod 'Firebase/Database'

  # Facebook SignIn

    pod 'FBSDKLoginKit'

  # Google SignIn
    pod 'GoogleSignIn'

    pod 'MessageKit'
    pod 'JGProgressHUD'
    pod 'SDWebImage'
    pod 'RealmSwift'
    
  target 'MKMessageTests' do
    inherit! :search_paths
    # Pods for testing
  end


end